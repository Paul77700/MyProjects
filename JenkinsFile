pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Paul77700/MyProjects.git'
            }
        }
        stage('Say Hello') {
            steps {
                cmd_exec('echo "Hello y\'all !"')
            }
        }
        stage('Run tests') {
            steps {
                cmd_exec("dir")
            }
        }
        stage('Test permissions'){
            steps{
                cmd_exec("mkdir test-dir")
                cmd_exec("dir")
                cmd_exec("del test-dir")
            }
        }
    }
}
